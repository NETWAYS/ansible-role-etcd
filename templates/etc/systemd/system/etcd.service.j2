#jinja2: trim_blocks:False
{%- if not etcd_settings['discovery-srv'] %}
{%- macro cluster_hosts() -%}
{%- if not etcd_use_default_ipv4 -%}
{%- for host in groups[etcd_ansible_group] -%}
{{hostvars[host]['ansible_hostname']}}=https://{{hostvars[host]['ansible_' + etcd_interface].ipv4.address}}:{{etcd_peer_port}}{% if not loop.last %},{% endif %}
{%- endfor -%}
{%- else -%}
{%- for host in groups[etcd_ansible_group] -%}
{{hostvars[host]['ansible_hostname']}}=https://{{hostvars[inventory_hostname]['ansible_default_ipv4']['address']}}:{{etcd_peer_port}}{% if not loop.last %},{% endif %}
{%- endfor -%}
{%- endif -%}
{%- endmacro -%}
{%- set x=etcd_settings.__setitem__('initial-cluster',cluster_hosts()) -%}
{%- set x=etcd_settings.__delitem__('discovery-srv') -%}
{%- endif %}
[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd/

[Service]
{% if etcd_allow_unsupported_archs %}
Environment=ETCD_UNSUPPORTED_ARCH={{etcd_architecture}}
{% endif %}
ExecStart={{etcd_bin_dir}}/etcd \
{%- for setting in etcd_settings|sort %}
  --{{setting}}="{{etcd_settings[setting]}}" {% if not loop.last %}\{% endif %}
{%- endfor %}
Restart=on-failure
RestartSec=5
Type=notify

[Install]
WantedBy=multi-user.target
